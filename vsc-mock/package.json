{
    "name": "vsc-mock",
    "displayName": "vsc-mock",
    "description": "Generate mock form data on the fly.",
    "version": "0.0.1",
    "homepage": "https://github.com/Spiderpig86/vsc-mock",
    "publisher": "Spiderpig86",
    "engines": {
        "vscode": "^1.27.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:mock.basics",
        "onCommand:mock.text",
        "onCommand:mock.person",
        "onCommand:mock.thing",
        "onCommand:mock.mobile",
        "onCommand:mock.web",
        "onCommand:mock.location",
        "onCommand:mock.time",
        "onCommand:mock.finance",
        "onCommand:mock.misc"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "mock.basics",
                "title": "Mock: Basic Values"
            },
            {
                "command": "mock.finance",
                "title": "Mock: Finance"
            },
            {
                "command": "mock.text",
                "title": "Mock: Text"
            },
            {
                "command": "mock.person",
                "title": "Mock: Person"
            },
            {
                "command": "mock.thing",
                "title": "Mock: Thing"
            },
            {
                "command": "mock.mobile",
                "title": "Mock: Mobile"
            },
            {
                "command": "mock.web",
                "title": "Mock: Web"
            },
            {
                "command": "mock.location",
                "title": "Mock: Location"
            },
            {
                "command": "mock.time",
                "title": "Mock: Time"
            },
            {
                "command": "mock.Finance",
                "title": "Mock: Finance"
            },
            {
                "command": "mock.misc",
                "title": "Mock: Misc"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "vsc-mock",
            "properties": {
                "vscmock.locale": {
                    "type": "string",
                    "default": "en",
                    "description": "Set locale for vsc-mock"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "chance": "^1.0.16",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/chance": "^1.0.1",
        "ts-node": "^7.0.1"
    }
}
